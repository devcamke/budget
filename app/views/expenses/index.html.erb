<div class="mx-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-center ">
    <h1 class="font-bold text-4xl mb-4 sm:mb-0">Expenses</h1>
  </div>

  <div id="expenses" class="min-w-full mt-4">
    <table class="w-full table-auto shadow-md rounded-md">
      <thead class="bg-blue-600 text-white p-4 rounded-l-lg rounded-r-lg text-left">
        <tr>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left">Name</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left">Date</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left">Amount USD</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left">Description</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left">Category</th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left"></th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-left
          "></th>

      </thead>
      <tbody class="divide-y divide-gray-200 mx-8">
        <%= render @expenses %>
      </tbody>
    </table>
    <tfoot class="mt-4">
     <tr>
      <td colspan="2"></td>
      <td><strong>Total Expenses: <%= number_with_precision(@total_expenses, precision: 2) %></strong></td>
      <td colspan="3"></td>
      </tr>
    </tfoot>
  </div>

  <div class="flex flex-col sm:flex-row justify-between items-center mt-4">
    <%= link_to "New expense", new_expense_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
</div>
